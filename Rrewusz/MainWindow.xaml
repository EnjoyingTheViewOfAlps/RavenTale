<Window x:Class="Rrewusz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rrewusz"
        mc:Ignorable="d"
        Title="MainWindow" Height="475" Width="800">
    <Grid Background="#080808">
        <WrapPanel Margin="0,370,0,0">
            <Button x:Name="AttackBTN" BorderThickness="3" Margin="50,12,0,0" Background="Black" Foreground="Orange" Height="40" Width="130" Content="Attack" BorderBrush="Orange" FontSize="17" Click="AttackBTN_Click"/>
            <Button x:Name="BlockBTN" BorderThickness="3" Margin="50,12,0,0" Background="Black" Foreground="Orange" Height="40" Width="130" Content="Block" BorderBrush="Orange" FontSize="17"/>
            <Button x:Name="HealBTN" BorderThickness="3" Margin="50,12,0,0" Background="Black" Foreground="Orange" Height="40" Width="130" Content="Heal" BorderBrush="Orange" FontSize="17"/>
            <Button x:Name="SkipkBTN" BorderThickness="3" Margin="50,12,0,0" Background="Black" Foreground="Orange" Height="40" Width="130" Content="Skip" BorderBrush="Orange" FontSize="17"/>
        </WrapPanel>
    </Grid>
</Window>
